{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022.Error",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "composite": true,
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
