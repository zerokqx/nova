{
  "name": "nova-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nova-backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "prisma:regenerate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prisma db pull && prisma generate"
        ],
        "cwd": "apps/nova-backend"
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/nova-backend",
        "webpackConfig": "apps/nova-backend/webpack.config.ts",
        "target": "node",
        "tsConfig": "apps/nova-backend/tsconfig.app.json"
      },
      "configurations": {
        "development": {
          "optimization": false
        },
        "production": {
          "optimization": true
        }
      },
      "defaultConfiguration": "development"
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "options": {
        "webpackConfig": "apps/nova-backend/webpack.config.ts",
        "tsConfig": "apps/nova-backend/tsconfig.app.json",
        "buildTarget": "nova-backend:build",
        "hmr": true
      },
      "configurations": {
        "production": {
          "buildTarget": "nova-backend:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
