{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/nova-backend",
    "module": "nodenext",
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2022",
    "moduleResolution": "nodenext",
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@orm/*": [
        "src/generated/*"
      ],
      "@ormClient": [
        "src/generated/prisma/client.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../../libs/slash/tsconfig.lib.json"
    }
  ]
}
