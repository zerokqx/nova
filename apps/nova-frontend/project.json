{
  "name": "nova-frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/nova-frontend/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project nova-frontend --web",
  "targets": {
    "build": {
      "cache": true,
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/nova-frontend"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "nova-frontend:build"
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "port": 5173,
        "buildTarget": "nova-frontend:build"
      },
      "configurations": {}
    },
    "openapi:generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bunx openapi-typescript http://localhost:3000/docs-json -o ./src/shared/types/schema.d.ts"
        ],
        "cwd": "apps/nova-frontend"
      }
    }
  }
}
